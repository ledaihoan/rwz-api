# ------------- Application -------------
NODE_ENV=production
PORT=5000

# ------------- Database ----------------
# For local dev (Docker Compose 'mysql' service)
DATABASE_URL="mysql://rwz_user:rwz_password@mysql:3306/rwz_db"
SHADOW_DATABASE_URL="mysql://root:rootpassword@mysql:3306/rwz_shadow"

# ------------- Auth / JWT --------------
# Change in production!
JWT_SECRET=change-this-in-prod
# Durations can be "15m", "7d", "3600s", etc.
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ------------- Logging -----------------
# trace | debug | info | warn | error | fatal | silent
LOG_LEVEL=debug
# Pretty logs only in local dev (Pino transport)
PRETTY_LOGS=true

# ------------- CORS --------------------
# Comma-separated list of allowed origins in production.
# In dev/test, if empty, all origins are allowed.
# Example: https://your-frontend.app,https://admin.your-frontend.app
CORS_ORIGINS=http://localhost:5555

# ------------- Rate Limit --------------
# 5 minutes default window, 150 requests per window per IP
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX=150